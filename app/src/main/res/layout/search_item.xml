<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_search_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lighter_blue">

            <ImageView
                android:id="@+id/image_search_item"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@id/constraint_search_item"
                app:layout_constraintStart_toStartOf="@id/constraint_search_item"
                app:layout_constraintTop_toTopOf="@id/constraint_search_item"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/title_search_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:breakStrategy="high_quality"
                android:fontFamily="@font/alata"
                android:maxLines="3"
                android:textAlignment="textStart"
                android:textColor="@color/petroleum_blue"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@id/writer_search_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_search_item"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="titulo" />

            <TextView
                android:id="@+id/writer_search_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alata"
                android:maxLines="2"
                android:textColor="@color/gray"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_search_item"
                app:layout_constraintTop_toBottomOf="@id/title_search_item"
                tools:text="[autores]" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>